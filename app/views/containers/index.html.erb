<p id="notice"><%= notice %></p>

<h1>Listing Containers</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Volume ml</th>
      <th>Refillable</th>
      <th>Last refill date</th>
      <th>Expiration date</th>
      <th>Empty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @containers.each do |container| %>
      <tr>
        <td><%= container.description %></td>
        <td><%= container.volume_ml %></td>
        <td><%= container.refillable %></td>
        <td><%= container.last_refill_date %></td>
        <td><%= container.expiration_date %></td>
        <td><%= container.empty %></td>
        <td><%= link_to 'Show', container %></td>
        <td><%= link_to 'Edit', edit_container_path(container) %></td>
        <td><%= link_to 'Destroy', container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

